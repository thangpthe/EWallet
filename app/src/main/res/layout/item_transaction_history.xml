<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Icon -->
        <ImageView
            android:id="@+id/ivTransactionIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/ic_income"
            android:contentDescription="Transaction icon"/>

        <!-- Transaction Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <!-- Description -->
            <TextView
                android:id="@+id/tvTransactionDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nạp tiền từ MB Bank"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"/>

            <!-- Category -->
            <TextView
                android:id="@+id/tvTransactionCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nạp tiền"
                android:textColor="#757575"
                android:textSize="13sp"
                android:layout_marginTop="2dp"
                android:visibility="visible"/>

            <!-- Date and Time -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvTransactionDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16/11/2025"
                    android:textColor="#999999"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • "
                    android:textColor="#999999"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvTransactionTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17:12"
                    android:textColor="#999999"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Amount -->
        <TextView
            android:id="@+id/tvTransactionAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+50.000 ₫"
            android:textColor="#4CAF50"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>